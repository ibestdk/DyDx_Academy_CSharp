@model DyDx_Academy.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<link href="~/css/account.css" rel="stylesheet" />


<section class="bg-controller">

    <div class="container" style="padding-top: 12%;">



        <div class="form-login" style="margin: 0 auto; width: 400px; height: 460px;">
            <div style="padding: 40px;">


                <div class="col">
                    <form asp-controller="Account" asp-action="Login">
                        <h3 style="text-align:center;">กรอกข้อมูลเพื่อเข้าสู่ระบบ</h3>

                        @if (TempData["Error"] != null)
                        {
                            <div class="col-md-12 alert alert-danger">
                                <span><b>Sorry!</b> - @TempData["Error"]</span>
                            </div>
                        }
                        <div class="text-danger pt3" asp-validation-summary="All"></div>

                        <div class="form-group pt3">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>

                        <div class="form-group pt3">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>

                        <div class="form-group pt-3">
                            <button type="submit" class="button-login" style="width:100%">เข้าสู่ระบบ</button>
                            <a type="button" asp-area=""
                               asp-controller="Account"
                               asp-action="Index" class="button-register d-inline-block mt-3" style="width:100%">
                                สมัครสมาชิก
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <style>

        .button-login {
            border-radius: 10px;
            background-color: #6e98db;
            color: white;
            transition: .5s;
            text-decoration: none;
            padding: 10px;
            text-align: center;
            border: none;
        }

            .button-login:hover {
                background-color: #2a6ad1;
            }

        .button-register {
            border-radius: 10px;
            border: 1px solid gray;
            color: gray;
            transition: .5s;
            text-decoration: none;
            padding: 10px;
            text-align: center;
        }

            .button-register:hover {
                background-color: #ffafc3;
                color: white;
                border: none;
            }
    </style>

</section>



