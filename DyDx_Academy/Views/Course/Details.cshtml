@model Courses 

@{ ViewData["Title"] = "Courses details"; }

<div class="row" style="padding-top: 88px">
    <div class="col-md-8 offset-2" style="padding-top: 40px;">
        <div class=" mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <a class="float-right text-primary" asp-action="Index">
                        < Back to List
                    </a>
                </div>
                    

                <div class="col-md-8">
                    <img style="border-radius:20px;" src="@Model.ImageURL" width="100%" alt="@Model.Name">
                </div>
                <div class="col-md-4">
                    <div class="card-body" style=" height: 100%; box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.25); border-radius: 20px; margin-left: 20px; }">
                        <div class="text-dark">
                            <p class="card-text"style="float:right;">
                                <h5 class="card-title" style="float:right; font-size:3rem; font-weight:600">
                                    @Model.Price.ToString("c")
                                </h5>
                            </p>
                            <p class="card-text">
                                <h5 class="card-title" style="font-size: 2.3rem; padding-top: 34%; border-bottom: 1px solid lightgray; padding-bottom: 5%; ">
                                    @Model.Name
                                </h5>
                            </p>
                        </div>
                        <p class="card-text">@Model.Description</p>
                        <p class="card-text"><b>Category: </b><a  class="text-light" style="border-radius: 30px; background-color: lightblue; width: 54%; padding: 2px 10px;">@Model.CourseCategory</a></p>
                        <p class="card-text">
                            <div>
                                <a class="btn-addtocart text-white"
                                   asp-controller="Orders"
                                   asp-action="AddItemToShoppingCart" asp-route-id="@Model.Id">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </a>
                            </div>
                            
                        </p>

                    </div>
                </div>
                <div class="col-md-12 " style=" padding-bottom: 300px; padding-top : 100px;">
                    <div class="" style="display: grid; ">
                        <p style="color: #C2C2C2;">Course last update : @Model.Create.ToString("dd/MM/yyyy")</p>
                            <hr />
                            <b style="text-align:center; font-size:2.5rem;">Instructor</b>
                            <div class="row">
                                @foreach (var instructor in Model.Instructor_Course)
                                {
                    <div class="column text-center">
                        <img class="border-info rounded-circle" src="@instructor.Instructors.ProfilePictureURL" style="max-width: 150px" />
                        <br />
                        <a asp-controller="Instructors" asp-action="Details" asp-route-id="@instructor.InstructorId">@instructor.Instructors.FullName</a>
                    </div>
                    }
                            </div>


                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-addtocart {
        width: 100%;
        height: 30%;
        background: linear-gradient(90deg, #F7971E 0%, #FFD200 100%);
        border-radius: 50px;
        padding: 15px;
        font-weight: 900;
        text-decoration: none;
        text-align: center;
        display: block;
        transition: .5s;
        font-size: 1.2rem

    }
    .btn-addtocart:hover {

        background: linear-gradient(180deg, #F7971E 0%, #FFD200 100%);

    }
    a{
        text-decoration: none ;
        color: black;
    }
    a:hover{
        color: black;
    }
</style>